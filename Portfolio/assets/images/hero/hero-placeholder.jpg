<svg width="500" height="400" viewBox="0 0 500 400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="heroBg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#00d4ff;stop-opacity:0.2" />
      <stop offset="100%" style="stop-color:#7c3aed;stop-opacity:0.2" />
    </linearGradient>
    <linearGradient id="accentGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#00d4ff" />
      <stop offset="100%" style="stop-color:#7c3aed" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="500" height="400" fill="url(#heroBg)"/>
  
  <!-- Decorative circles -->
  <circle cx="100" cy="100" r="80" fill="#00d4ff" opacity="0.1"/>
  <circle cx="400" cy="300" r="100" fill="#7c3aed" opacity="0.1"/>
  
  <!-- Central design element - geometric shapes -->
  <g transform="translate(250, 200)">
    <!-- Outer ring -->
    <circle cx="0" cy="0" r="120" fill="none" stroke="url(#accentGradient)" stroke-width="2" opacity="0.3"/>
    <circle cx="0" cy="0" r="100" fill="none" stroke="url(#accentGradient)" stroke-width="2" opacity="0.5"/>
    
    <!-- Inner geometric shape -->
    <rect x="-40" y="-40" width="80" height="80" fill="#00d4ff" opacity="0.1" rx="10"/>
    
    <!-- Center point -->
    <circle cx="0" cy="0" r="10" fill="url(#accentGradient)"/>
    
    <!-- Rotating elements -->
    <g transform="rotate(0)">
      <rect x="-5" y="-60" width="10" height="30" fill="#7c3aed" opacity="0.6"/>
    </g>
    <g transform="rotate(120)">
      <rect x="-5" y="-60" width="10" height="30" fill="#00d4ff" opacity="0.6"/>
    </g>
    <g transform="rotate(240)">
      <rect x="-5" y="-60" width="10" height="30" fill="#7c3aed" opacity="0.6"/>
    </g>
  </g>
  
  <!-- Flow lines -->
  <path d="M 50 50 Q 150 100 250 80 T 450 150" stroke="#00d4ff" stroke-width="2" fill="none" opacity="0.3"/>
  <path d="M 100 350 Q 200 300 300 320 T 450 250" stroke="#7c3aed" stroke-width="2" fill="none" opacity="0.3"/>
  
  <!-- Corner elements -->
  <g opacity="0.2">
    <polygon points="20,20 40,20 30,40" fill="#00d4ff"/>
    <polygon points="480,380 460,380 470,360" fill="#7c3aed"/>
  </g>
  
  <!-- Text -->
  <text x="250" y="375" font-family="Arial, sans-serif" font-size="14" fill="#7c3aed" text-anchor="middle" opacity="0.6">HERO IMAGE</text>
</svg>
